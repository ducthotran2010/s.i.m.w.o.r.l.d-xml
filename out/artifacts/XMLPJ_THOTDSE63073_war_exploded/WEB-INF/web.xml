<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>thotd.controllers.admin.AdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/AdminController</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CrawlServlet</servlet-name>
        <servlet-class>thotd.controllers.admin.CrawlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CrawlServlet</servlet-name>
        <url-pattern>/CrawlServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CrawlOrderServlet</servlet-name>
        <servlet-class>thotd.controllers.admin.CrawlOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CrawlOrderServlet</servlet-name>
        <url-pattern>/CrawlOrderServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>thotd.controllers.general.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>GeneralController</servlet-name>
        <servlet-class>thotd.controllers.general.GeneralController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GeneralController</servlet-name>
        <url-pattern>/GeneralController</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>SearchSimServlet</servlet-name>
        <servlet-class>thotd.controllers.general.SearchSimServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchSimServlet</servlet-name>
        <url-pattern>/SearchSimServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LookUpServlet</servlet-name>
        <servlet-class>thotd.controllers.general.LookUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LookUpServlet</servlet-name>
        <url-pattern>/LookUpServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginRoute</servlet-name>
        <servlet-class>thotd.controllers.general.LoginRoute</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginRoute</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>PhongThuyServlet</servlet-name>
        <servlet-class>thotd.controllers.general.PhongThuyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PhongThuyServlet</servlet-name>
        <url-pattern>/PhongThuyServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CrawlPhongThuyServlet</servlet-name>
        <servlet-class>thotd.controllers.admin.CrawlPhongThuyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CrawlPhongThuyServlet</servlet-name>
        <url-pattern>/CrawlPhongThuyServlet</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>1440</session-timeout>
    </session-config>
</web-app>